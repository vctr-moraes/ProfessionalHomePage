<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="initial-scale=1, shrink-to-fit=no, width=device-width" name="viewport">
    <title>Victor Moraes - Professional Home Page</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/material.min.css" />
    <link rel="stylesheet" href="~/lib/lightbox/dist/css/lightbox.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i|Roboto+Mono:300,400,700|Roboto+Slab:300,400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white" style="padding-top:25px;">
            <div class="container">
                <h2><a class="text-black-50" asp-page="/Index" style="text-decoration:none;">Victor Moraes</a></h2>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-page="/Sobre">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-page="/Projetos">Projetos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-dark" asp-page="/Tecnologias">Tecnologias</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br /><br />
    <footer class="border-top footer text-muted" style="position:absolute;">
        <div class="container">
            &copy; @DateTime.Now.Year - Victor Moraes - Analista de Desenvolvimento de Sistemas
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/material.min.js"></script>
    <script src="~/lib/lightbox/dist/js/lightbox.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
